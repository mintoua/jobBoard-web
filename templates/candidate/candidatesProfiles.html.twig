{% extends 'base.html.twig' %}
{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h4>Candidates List ({{ candidates_list.getTotalItemCount }}) found</h4>
                </div>

                <div class="card-body">
                    <form class="dez-form" action="{{ path('user_candidates_filter') }}" method="post">
                        <h3 class="form-title m-t0">Need to find something ?</h3>
                        <div class="dez-separator-outer m-b5">
                            <div class="dez-separator bg-primary style-liner"></div>
                        </div>
                        <div class="row">
                            <div class="col-sm">
                                <p>Search by first Name. </p>
                                <div class="form-group">
                                    <input name="firstName" class="form-control"
                                           type="text"/>
                                </div>
                            </div>
                            <div class="col-sm">
                                <p>Search by last Name. </p>

                                <div class="form-group">
                                    <input name="lastName" class="form-control"
                                           type="text"/>
                                </div>
                            </div>
                            <div class="col-sm">

                                <p>Search by Address. </p>

                                <div class="form-group">
                                    <input name="adresse" class="form-control"
                                           type="text"/>
                                </div>
                            </div>
                            <div class="col-sm">

                                <p>Search by professional title. </p>

                                <div class="form-group">
                                    <input name="professionalTitle" class="form-control"
                                           type="text"/>
                                </div>
                            </div>

                        </div>


                        <div class="form-group clearfix text-left">
                            <button class="site-button pull-right">Search</button>
                        </div>
                    </form>


                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                            <tr>
                                <th>Candidate first name</th>
                                <th>Candidate last name</th>
                                <th>Candidate date of birth</th>
                                <th>Candidate professional title</th>
                                <th>Candidate adress</th>
                                <th>Candidate phone</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for candidate in candidates_list %}
                                <tr>
                                    <td>{{ candidate.firstName }}</td>
                                    <th scope="row">{{ candidate.lastName }}</th>
                                    <td>{{ candidate.dateOfBirth|date }}</td>
                                    <td>{{ candidate.professionalTitle }}</td>
                                    <td>{{ candidate.adresse }}</td>
                                    <td>{{ candidate.phone }}</td>
                                    <td><img src="{{ asset('uploads/') }}{{ app.user.imageName }}"
                                             style="width: 50px;height: 50px" alt="image"></td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="ml-5 justify-content-center">
        {{ knp_pagination_render(candidates_list) }}
    </div>
{% endblock %}