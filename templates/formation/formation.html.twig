{% extends 'base.html.twig' %}
{% block title%} Liste des Formations {% endblock %}
{% block content %}
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
</head>
    <style>


        .btn {
            background-color: DodgerBlue;
            border: none;
            color: white;
            padding: 15px 12px;
            font-size: 14px;
            cursor: pointer;
        }

        /* Darker background on mouse-over */
        .btn:hover {
            background-color: RoyalBlue;
        }
        .pagination a {
            color: black;
            float: left;
            padding: 8px 16px;
            text-decoration: none;
            transition: background-color .3s;
        }

        .pagination a.active {
            background-color: dodgerblue;
            color: white;
        }

        .pagination a:hover:not(.active) {background-color: #ddd;}

    </style>

<!-- PAGE TITLE HERE -->
    <div class="widget">
        <div class="dez-bnr-inr overlay-black-middle" style="background-image:url(https://www.managementdelaformation.fr/wp-content/uploads/2018/05/RHEXIS_R%C3%A9forme_Action_de_Formation.jpg);">

        <div class="container" >
            <div class="dez-bnr-inr-entry">
            {{ form_start(form) }}
            <div class="form-row align-items-end" >
                <div class="col" >
                    {{ form_row(form.category) }}
                </div>
                <div class="col">
                    <div class="form-group">
                        <button type="submit"  class="btn">CHERCHER</button>
                    </div>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
        </div>
        </div>
    </div>

    </div>
        <div style="text-align:right">

            <div class="btn-group btn-group-sm mb-3"  >

                <a  href="{{ path('formation_pdf')}}" class="btn">PDF  </a>


                <a  href="{{ path('category')}}"  class="btn">+ Catégorie </a>


            </div>
        </div>




    <div class="row">
{% if formation %}

    {% for formation in formation %}
        <div class="card shadow" style="width: 18rem;">
            <h5 class="card-title" style="color: blue" align="center">{{ formation.nom }}</h5>
            <img class="card-img-top" src="https://www.village-justice.com/articles/local/cache-gd2/07/d1a29a3ffe4e7b85756a3dd3b80a6a.png?1589621974" alt="Card image cap">

            <div class="card-body text-center">
                <h6>Catégorie: {{ formation.category.titre }}</h6>

                <p class="fw4">Date debut: {{ formation.date_debut|date('d-m-Y') }}</p>
                <p class="fw4">Date fin: {{ formation.date_fin|date('d-m-Y') }}</p>
                {% if formation.prix>0 %}
                <h5 class="m-b5" style="color:red"> Prix: {{ formation.prix }}DT</h5>
                {% else %}
                    <h5 align="center"  style="color:red"><mark>Gratuite</mark></h5>
                {% endif %}
                <a href="/formation/{{ formation.id }}" class="btn btn-primary mb-2"  >PLUS</a>
                <a href="/formation/edit/{{ formation.id }}" class="btn btn-warning mb-2" >Edit</a>
                <a href="/formation/delete/{{ formation.id }}" class="btn btn-danger mb-2" onclick="return confirm('Etesvous sûr de supprimer cet article?');">Supprimer</a>
            </div>
        </div>

    {% endfor %}


{% else %}
    <p>Aucune formation</p>
{% endif %}

    </div>

    </div>

    </div>
    <div class="navigation">
        {{ knp_pagination_render(formation) }}


    </div>



</body>
<div style="text-align:right">


            <a class="btn" href="{{ path('new_formation')}}"  style="align:center">+ Formation </a>


</div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
    <script>
        document.getElementById("Aujourdhui").valueAsDate = new Date();
    </script>
{% endblock %}
