{% extends 'base.html.twig' %}
{% block title%} Liste des Formations {% endblock %}
{% block content %}
    <head>
        <meta name='viewport' content='width=device-width, initial-scale=1'>
        <link rel="stylesheet" type="text/css" href="plugins/themify/themify-icons.css">
        <link rel="stylesheet" type="text/css" href="css/style.min.css">
        <link rel="stylesheet" type="text/css" href="css/templete.min.css">
        <link rel='stylesheet' href='https://cdn.jsdelivr.net/npm/sweetalert2@7.12.15/dist/sweetalert2.min.css'></link>
        <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10.15.7/dist/sweetalert2.all.min.js" integrity="sha256-tFXKkrzNScHtIKgp71cCOiVCPAokgE5k7m/i2VfU+4w=" crossorigin="anonymous"></script>

        <style>


            .btn {
                background-color: DodgerBlue;
                border: none;
                color: white;
                padding: 15px 14px;
                font-size: 14px;
                cursor: pointer;
            }

            /* Darker background on mouse-over */
            .btn:hover {
                background-color: RoyalBlue;
            }
            .pagination a {
                color: black;
                float: left;
                padding: 8px 16px;
                text-decoration: none;
                transition: background-color .3s;
            }

            .pagination a.active {
                background-color: dodgerblue;
                color: white;
            }

            .pagination a:hover:not(.active) {background-color: #ddd;}

        </style>
    </head>
    <body>
    <!-- PAGE TITLE HERE -->
    <div class="widget">

        <div class="dez-bnr-inr overlay-black-middle" style="background-image:url(https://www.managementdelaformation.fr/wp-content/uploads/2018/05/RHEXIS_R%C3%A9forme_Action_de_Formation.jpg);">

            <div class="container" >
                <div class="dez-bnr-inr-entry">
                    {{ form_start(form) }}
                    <div class="form-row align-items-end" >
                        <div class="col" >
                            {{ form_row(form.category) }}
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <button type="submit"  class="btn">CHERCHER</button>
                            </div>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

    </div>
    <br>














    <h2 align="left" style="color: blue" >Formations gratuites:</h2>




    <div class="row">


        {% for formation in formation %}

            {% if formation.prix==0 %}



                <div class="card shadow" style="width: 18rem;">
                    <h5 class="card-title" style="color: blue" align="center">{{ formation.nom }}</h5>
                    <img class="card-img-top" src="https://www.village-justice.com/articles/local/cache-gd2/07/d1a29a3ffe4e7b85756a3dd3b80a6a.png?1589621974" alt="Card image cap">

                    <div class="card-body text-center">
                        <h6>Cat√©gorie: {{ formation.category.titre }}</h6>

                        <p class="fw4"> > Date debut: {{ formation.date_debut|date('d-m-Y') }}</p>
                        <p class="fw4"> > Date fin: {{ formation.date_fin|date('d-m-Y') }}</p>

                        <a href="/formation/{{ formation.id }}" class="btn btn-primary mb-2"  >PLUS</a>
            {% endif %}



                    </div>


        {% endfor %}


</div>
    </div>


                </div>

    </div>







    </div>

    </div>
    <div class="pagination-bx m-t30">
        {{ knp_pagination_render(formation) }}


    </div>



    </body>


    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script type="text/javascript">

        $(document).ready(function(){

            $("#confirm-btn-alert").click(function(){

                swal({
                    title: 'Error!',
                    text: 'Do you want to continue',
                    type: 'error',
                    confirmButtonText: 'Cool'
                })
            });


        });
    </script>
    <script>
        document.getElementById("Aujourdhui").valueAsDate = new Date();
    </script>
{% endblock %}
