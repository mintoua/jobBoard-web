<div class="section-full browse-job p-b50">
  <div class="container">
    <div class="row">
      <div class="col-xl-9 col-lg-8 col-md-7">
        <div class="job-bx-title clearfix">
          <h5 class="font-weight-700 pull-left text-uppercase">
            {{ nb }} Jobs Found <span>
              <form action="{{ path('pdfAll') }}">
                <button class="site-button">Print Job Infos</button>
              </form>
            </span>
          </h5>
          {% if list is empty %}
            <h5 class="font-weight-700 pull-left text-uppercase">
              <p class="expired text-red" style="margin-left: 2.5em">
                No Results !
              </p>
            </h5>
          {% endif %}
        </div>
        <ul class="post-job-bx">
          {% for c in list %}
            {% if date(c.getDateExpiration()) > date() %}
              <li>
                <div class="post-bx">
                  <div class="d-flex m-b30">
                    <div class="job-post-company">
                      <a href="javascript:void(0);">
                        <span>
                          <img alt=""
                            src="{{
                            asset(
                              'frontOffice/'
                            )
                            }}images/logo/icon1.png" />
                        </span>
                      </a>
                    </div>
                    <div class="job-post-info">
                      <h4>
                        <a href="job-detail.html">{{ c.titre }}</a>
                      </h4>
                      <ul>
                        <li>
                          <i class="fa fa-map-marker"></i>
                          {{ c.location }}
                        </li>
                        <li>
                          <i class="fa fa-bookmark-o"></i>
                          {{ c.description }}
                        </li>
                        <li>
                          {% set dateTime = date(c.getDatedebut()) %}
                          {% set mounth = dateTime|date('F')|number_format %}
                          {% set year = dateTime|date('y')|number_format %}
                          {% set Nmounth = date()|date('F')|number_format %}
                          {% set Nyear = date()|date('y')|number_format %}
                          <i class="fa fa-clock-o"></i> Published {{ (Nyear
                            - year)
                            * 12
                            + Nmounth
                            - mounth }} mounths ago
                        </li>
                      </ul>
                    </div>
                  </div>
                  <div class="d-flex">
                    <div class="job-time mr-auto">
                      <a href="javascript:void(0);">
                        <span>{{ c.poste }}</span>
                      </a>
                    </div>
                    <div class="salary-bx">
                      <span>${{ c.maxSalary }} - ${{ c.minSalary }}</span>
                      <span>
                        <form action="{{
                          path(
                            'apply',
                            {
                              id: c.id
                            }
                          )
                          }}">
                          <button class="site-button">Apply Job</button>
                        </form>
                      </span>
                    </div>
                  </div>
                  <label class="like-btn">
                    <input type="checkbox" />
                    <span class="checkmark"></span>
                  </label>
                  <span>
                    <form action="{{
                      path(
                        'pdf',
                        {
                          id: c.id
                        }
                      )
                      }}">
                      <button class="site-button">Print Job Infos</button>
                    </form>
                  </span>
                </div>
              </li>
            {% endif %}
          {% endfor %}
        </ul>
        <div class="pagination-bx m-t30">
          {{ knp_pagination_render(list) }}
        </div>
      </div>
      <div class="col-xl-3 col-lg-4 col-md-5">
        <div class="sticky-top">
          <div class="candidates-are-sys m-b30">
            <div class="candidates-bx">
              <div class="testimonial-pic radius">
                <img src="{{
                  asset(
                    'frontOffice/'
                  )
                  }}images/testimonials/pic3.jpg"
                  alt=""
                  width="100"
                  height="100" />
              </div>
              <div class="testimonial-text">
                <p>
                  I just got a job that I applied for via careerfy! I used the
                  site all the time during my job hunt.
                </p>
              </div>
              <div class="testimonial-detail">
                <strong class="testimonial-name">Richard Anderson</strong>
                <span class="testimonial-position">Nevada, USA</span>
              </div>
            </div>
          </div>
          <ul class="company-logo-wg sidebar bg-white job-bx m-b30 clearfix">
            <li class="brand-logo">
              <a href="javascript:void(0);">
                <img src="{{ asset('frontOffice/') }}images/logo/logo1.jpg"
                  alt="" />
              </a>
            </li>
            <li class="brand-logo">
              <a href="javascript:void(0);">
                <img src="{{ asset('frontOffice/') }}images/logo/logo2.jpg"
                  alt="" />
              </a>
            </li>
            <li class="brand-logo">
              <a href="javascript:void(0);">
                <img src="{{ asset('frontOffice/') }}images/logo/logo3.jpg"
                  alt="" />
              </a>
            </li>
            <li class="brand-logo">
              <a href="javascript:void(0);">
                <img src="{{ asset('frontOffice/') }}images/logo/logo4.jpg"
                  alt="" />
              </a>
            </li>
            <li class="brand-logo">
              <a href="javascript:void(0);">
                <img src="{{ asset('frontOffice/') }}images/logo/logo5.jpg"
                  alt="" />
              </a>
            </li>
            <li class="brand-logo">
              <a href="javascript:void(0);">
                <img src="{{ asset('frontOffice/') }}images/logo/logo6.jpg"
                  alt="" />
              </a>
            </li>
            <li class="brand-logo">
              <a href="javascript:void(0);">
                <img src="{{ asset('frontOffice/') }}images/logo/logo7.jpg"
                  alt="" />
              </a>
            </li>
            <li class="brand-logo">
              <a href="javascript:void(0);">
                <img src="{{ asset('frontOffice/') }}images/logo/logo8.jpg"
                  alt="" />
              </a>
            </li>
            <li class="brand-logo">
              <a href="javascript:void(0);">
                <img src="{{ asset('frontOffice/') }}images/logo/logo9.jpg"
                  alt="" />
              </a>
            </li>
          </ul>
          <div class="quote-bx">
            <div class="quote-info">
              <h4>
                Make a Difference with Your Online Resume!
              </h4>
              <p>
                Your resume in minutes with JobBoard resume assistant is ready!
              </p>
              <a href="register.html" class="site-button">Create an Account</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
