{% extends 'base.html.twig' %}
{% block content %}
      <div class="page-content bg-white">
        <!-- contact area -->
        <div class="content-block">
          <!-- Browse Jobs -->
          <div class="section-full bg-white p-t50 p-b20">
            <div class="container">
              <div class="row">
                <div class="col-xl-3 col-lg-4 m-b30">
                  <div class="sticky-top">
                    <div class="candidate-info company-info">
                      <div class="candidate-detail text-center">
                        <div class="canditate-des">
                          <a href="javascript:void(0);">
                            <img alt=""
                              src="{{
                              asset(
                                'frontOffice/'
                              )
                              }}images/logo/icon3.jpg" />
                          </a>
                          <div class="upload-link"
                            title="update"
                            data-toggle="tooltip"
                            data-placement="right">
                            <input type="file" class="update-flie" />
                            <i class="fa fa-pencil"></i>
                          </div>
                        </div>
                        <div class="candidate-title">
                          <h4 class="m-b5">
                            <a href="javascript:void(0);">@COMPANY</a>
                          </h4>
                        </div>
                      </div>
                      <ul>
                        <li>
                          <a href="company-profile.html">
                            <i class="fa fa-user-o" aria-hidden="true"></i>
                            <span>Company Profile</span>
                          </a>
                        </li>
                        <li>
                          <a href="company-post-jobs.html" class="active">
                            <i class="fa fa-file-text-o" aria-hidden="true"></i>
                            <span>Post A Job</span>
                          </a>
                        </li>
                        <li>
                          <a href="company-transactions.html">
                            <i class="fa fa-random" aria-hidden="true"></i>
                            <span>Transactions</span>
                          </a>
                        </li>
                        <li>
                          <a href="company-manage-job.html">
                            <i class="fa fa-briefcase" aria-hidden="true"></i>
                            <span>Manage jobs</span>
                          </a>
                        </li>
                        <li>
                          <a href="company-resume.html">
                            <i class="fa fa-id-card-o" aria-hidden="true"></i>
                            <span>Resume</span>
                          </a>
                        </li>
                        <li>
                          <a href="jobs-change-password.html">
                            <i class="fa fa-key" aria-hidden="true"></i>
                            <span>Change Password</span>
                          </a>
                        </li>
                        <li>
                          <a href="index.html">
                            <i class="fa fa-sign-out" aria-hidden="true"></i>
                            <span>Log Out</span>
                          </a>
                        </li>
                      </ul>
                    </div>
                  </div>
                </div>
                <div class="col-xl-9 col-lg-8 m-b30">
                  <div class="job-bx submit-resume">
                    <div class="job-bx-title clearfix">
                      <h5 class="font-weight-700 pull-left text-uppercase">
                        Post A Job
                        
                      </h5>
                      <a href="company-profile.html"
                        class="site-button right-arrow button-sm float-right">
                        Back
                      </a>
                    </div>{{ form_start(form) }}
                    <element class="expired pending">
                        {{ message }}
                    </element>
                    <form>
                      <div class="row">
                        <div class="col-lg-6 col-md-6">
                        {{ form_errors(form.titre) }}
                        {{ form_label(form.titre,"Post Title") }}
                        {{ form_widget(form.titre,{'attr': {'placeholder': 'Title'}}) }}                          
                        </div>
                        <div class="col-lg-6 col-md-6">
                          <div class="form-group">
                            <label>Your email</label>
                            {{ form_errors(form.email) }}
                        {{ form_widget(form.email,{'attr': {'placeholder': 'Email'}}) }}        
                          </div>
                        </div>
                        <div class="col-lg-6 col-md-6">
                          <div class="form-group">
                            <label>Job Type</label>
                            {{ form_errors(form.categorie) }}
                        {{ form_widget(form.categorie,{'attr': {'placeholder': 'Category'}}) }}    
                          </div>
                        </div>
                        <div class="col-lg-6 col-md-6">
                          <div class="form-group">
                            <label>Post</label>
                            {{ form_errors(form.poste) }}
                        {{ form_widget(form.poste,{'attr': {'placeholder': 'Post'}}) }}  
                          </div>
                        </div>
                        <div class="col-lg-6 col-md-6">
                          <div class="form-group">
                            <label>Minimum Salary ($):</label>
                            {{ form_errors(form.maxSalary) }}
                            {{ form_widget(form.maxSalary,{'attr': {'placeholder': 'Minimum Salary'}}) }}  
                          </div>
                        </div>
                        <div class="col-lg-6 col-md-6">
                          <div class="form-group">
                            <label>Maximum Salary ($):</label>
                            {{ form_errors(form.minSalary) }}
                        {{ form_widget(form.minSalary,{'attr': {'placeholder': 'Maximum Salary'}}) }}  
                          </div>
                        </div>
                        <div class="col-lg-6 col-md-6">
                          <div class="form-group">
                            <label>Description</label>
                            {{ form_errors(form.description) }}
                        {{ form_widget(form.description,{'attr': {'placeholder': 'Description'}}) }}  
                          </div>
                        </div>
                        <div class="col-lg-6 col-md-6">
                          <div class="form-group">
                            <label>Location</label>
                            {{ form_errors(form.location) }}
                            {{ form_widget(form.location,{'attr': {'placeholder': 'Location'}}) }}  
                          </div>
                        </div>

                        <div class="col-lg-12 col-md-12">

                            <div class="form-group">
                            <label>Upload File</label>
                            <div class="custom-file">
                              {{ form_errors(form.file) }}
                            {{ form_widget(form.file) }}  
                            </div>
                            </div>
                            </div>
                            
                            <div class="col-lg-6 col-md-6">
                          
                          <div class="form-group">
                          <label>Expiration Date</label>
                            {{ form_errors(form.date_expiration) }}
                            {{ form_widget(form.date_expiration) }}  
                        </div>
                        </div>

                      </div>      
                                    
                    {{ form_end(form) }}
                    <div class="col-lg-6 col-md-6">
                          <div class="form-group">
                            {{ form_widget(form.Upload) }}
                          </div>
                      </div>  
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- Browse Jobs END -->
        </div>
      </div>
      <!-- Content END -->
{% endblock %}